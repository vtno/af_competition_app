<table class="table table-striped table-bordered">
    <thead class="thead-inverse">
      <tr>
        <th>#</th>
        <th>ชื่อ</th>
        <th>หมายเลขเป้า</th>
        <th>คะแนนรวม</th>
        <% if @compet.range == 18 %>
          <th>10</th>        
          <th>9</th>
        <% else %>
          <th>X + 10</th>        
          <th>X</th>
        <% end%>

        <th>แก้ไขคะแนน</th>
      </tr>
    </thead>
    <tbody>
      <% @games.each_with_index do |game, index| %>
        <tr data-id="<%= game.id %>">
          <td><%= index + 1 %></td>
          <td><%= game.player_name %></td>
          <td><%= "#{game.target_number}#{game.target_slot}" %></td>
          </td>
          <td><%= game.score.total_score %></td>
          <% if @compet.score_type == 'qualification' %>
            <td>
              <%= game.score.ten_count %>
            </td>     
            <td>
              <%= game.score.nine_count %>
            </td> 
          <% else %>
            <td>
              <%= game.score.x_count %>
            </td>     
            <td>
              <%= game.score.x_and_10_count %>
            </td> 
          <% end %>
          <td>
            <%= link_to 'แก้ไข', edit_competition_game_path(id: game.id), class: 'btn btn-warning'%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
