<div class="container competition">
  <div class="row">
    <h1>AF Competition App</h1>
    <div class="col-md-12">
      <%= simple_form_for @compet do |f|%>
        <%= f.input :name, as: :hidden, input_html: { id: 'competition-name'} %>
      <% end %>
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" data-toggle="tab" href="#qualification" role="tab" aria-controls="qualification">รอบเก็บคะแนน</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#final" role="tab" aria-controls="final">รอบตัดเชือก</a>
        </li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="qualification" role="tabpanel">
          <table class="table table-striped qualification">
            <%= render partial: 'new_competition_section', locals: { range: 18 , score_type: 'qualification' }%>
            <%= render partial: 'new_competition_section', locals: { range: 50 , score_type: 'qualification' }%>            
          </table>
        </div>              
        <div class="tab-pane" id="final" role="tabpanel">
          <table class="table table-striped final">
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <%= link_to 'View all competitions', competitions_path, class: 'btn btn-primary center' %>
  </div>
</div>
